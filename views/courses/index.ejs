<%- include("../partials/header") %>
	
<div class="container">
	<header class="jumbotron">
	<div class="container">
		<h1>Welcome to The Fore(um)!</h1>
		<p>Browse golf courses with user reviews from all over the world!</p>
		<p>
		<a id="addBtn" class="btn btn-primary btn-lg" href="/courses/new">Add New Course!</a>
		</p>
	</div>
	</header>
<div class="row text-center">
	<div class="col-lg-12">
		
</div>
	<% courses.forEach(function(course){ %>
	<div class="col-md-3 col-sm-6 card border-dark bg-light mb-3">
		<div>
			<img class="card-img-top" src="<%= course.image %>">
		</div>
		<div class="card-title">
		<h4><%= course.name %></h4>
		</div>
		<p>
			<a href="/courses/<%= course._id %>" class="btn btn-primary">More Info</a>
		</p>
	</div>
	<% }) %>
	</div>
</div>

<%- include("../partials/footer") %>