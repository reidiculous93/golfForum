<%- include("../partials/header") %>

<div class="container">
	<h1 style="text-align: center; margin-bottom: 50px; margin-top: 30px;">Add New Comment for <%= course.name %>!</h1>
	<div class="row">
		<div style="width: 30%; margin: 0 auto;">
			<form action="/courses/<%=course._id %>/comments" method="POST"> 
				<div class="form-group">
					<textarea class="form-control" placeholder="Comment" name="comment[text]"></textarea>
				</div>
				<div class="form-group">
					<button class="btn btn-lg btn-primary btn-block">Submit!</button>
				</div>
			</form>	
				<a href="/courses">Back</a>
		</div>


	</div>
</div>
<%- include("../partials/footer") %>
